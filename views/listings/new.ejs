<% layout('layouts/boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="POST"   action="/addproduct" enctype="multipart/form-data">
        <br><br>
           <h1>Add Item</h1>
           <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Enter Title" class="form-control">
           </div>
            <br>
            <div class="mb-3">
                <label for="description" class="form-label">About</label>
                <textarea name="listing[description]" placeholder="Enter Product Description" class="form-control"></textarea>
            </div>
            <br>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" name="image" class="form-control" required>
            </div>
            <br>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="Enter Amount" class="form-control"></textarea>
            </div>
            <br>
            <div class="row">
                <div class="mb-3 col-md-4">
                     <select class="form-select" aria-label="Default select example">
                    
                        <option value="general" selected>General</option>
                        <option value="cse">CSE</option>
                        <option value="ece">ECE</option>
                        <option value="eee">EEE</option>
                         <option value="mech">Mech</option>
                         <option value="civil">Civil</option>
                        <option value="mett">Mett</option>
                   
                      </select>
                </div>
            
                <br>
                 <div class="mb-3 col-md-8">
                    <select class="form-select" aria-label="Default select example" name="listing[category]">
                        <option selected>Select Category</option>
                        <option value="books">Books</option>
                        <option value="accessories">Accessories</option>
                      </select>
                </div>
            </div>
           
            <br>
      
           <div>
            <button class="btn btn-outline-primary">Submit</button>
           </div>
           <br><br>
    </form>
   </div>
</div>
</body>
</html>
