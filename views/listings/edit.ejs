<% layout('layouts/boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <form method="POST"   action="/listings/<%= listing._id %>?_method=PUT">
        <br><br>
           <h1>Edit Item Details</h1>
           <div class="mb-3">
            <label for="title"   class="form-label">Title</label>
            <input type="text" value="<%= listing.title %>" name="listing[title]" placeholder="Enter title" class="form-control">
           </div>
            <br>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description for product" class="form-control"><%= listing.description%></textarea>
            </div>
            <br>
            <div class="mb-3">
                <label for="image" class="form-label">Product Image</label>
                <input name="listing[image]" value="<%= listing.image %>" placeholder="Choose a image" class="form-control"></input>
            </div>
            <br>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" value="<%= listing.price %>" placeholder="Enter amount" class="form-control"></textarea>
            </div>
            <br>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <select class="form-select" aria-label="Default select example">
                    
                        <option value="General" selected>General</option>
                        <option value="cse">CSE</option>
                        <option value="ece">ECE</option>
                        <option value="eee">EEE</option>
                         <option value="mech">Mech</option>
                         <option value="civil">Civil</option>
                        <option value="mett">Mett</option>
                   
                      </select>
                </div>
            
                <br>
                 <div class="mb-3 col-md-8">
                    <select class="form-select" aria-label="Default select example">
                        <option value="books" selected>Books</option>
                        <option value="Accessories">Accessories</option>
                      </select>
                </div>
            </div>
           
            <br>
      
           <div>
            <button class="btn btn-outline-primary">Edit</button>
           </div>
           <br><br>
    </form>
   </div>
</div>
</body>
</html>
