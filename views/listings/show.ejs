<% layout('layouts/boilerplate.ejs') %>
<body>
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>NOTE!</strong> You should pay some amout to confirm your intension to buy
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
         <div class="row mt-3">
                <div class="col-8 offset-3">
                        <h1>Product Info</h1>
                </div>
          <div class="card col-6 offset-3">
                <div class="show-img-div">
                        <img src="<%= listing.image %>" class="card-img-top show-img" alt="image">
                </div>
               
                <div class="show-card-body">
                  <p class="card-text">
                        <b><%= listing.title %></b>
                        <br><br>
                        <%= listing.description %>
                        <br><br>
                        <%= listing.price.toLocaleString("en-IN") %>
                        <br>
                  </p>
                <form action="/cart/add" method="POST" class="mt-2 add-to-cart-form">
                        <input type="hidden" name="productId" value="<%= listing._id %>">
                        <button type="submit" class="btn btn-outline-success add-to-cart-button">Add to Cart</button>
                    </form>

                </div>
          </div>
        </div>

</body>
</html>
